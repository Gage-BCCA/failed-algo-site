---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import '../styles/global.css';
const { pageTitle } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=New+Amsterdam&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link
    href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css"
    rel="stylesheet"
  />
    <link rel="stylesheet" href="{{ '/static/bundle.css' | url }}" />
    <script src="{{ '/static/js/littleBrother.js' | url }}" defer></script>
    <title>Failed Algorithm - { pageTitle }</title>
  </head>
  <body>
	<Header />
	<div class="content">
		<slot />
	</div>
	<Footer />
  </body>
</html>

<style>
	.content {
		margin: 0;
		width: 100%;
    min-height: 100vh;
	}
</style>
