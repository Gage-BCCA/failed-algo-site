import LinkButton from "../buttons/LinkButton.astro";
const { header, text } = Astro.props;
---
<style>
    .postcard {
        background-color: #2c3e50;
        color: white;
        padding: 1rem 3rem;
        border-radius: 6px;
        margin: 2rem auto;
        border: 3px solid #34495e;
        box-shadow: 15px 8px #e74c3c;
    }

</style>
<div class="postcard">
    <h1>{ header }</h1>
    <p>{ text }</p>
</div>

